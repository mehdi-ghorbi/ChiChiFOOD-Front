<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.chichifood.controller.SellerPanelController">
   <children>
      <VBox alignment="CENTER" prefHeight="600.0" prefWidth="153.0" spacing="10" style="-fx-background-color: #FFA500; -fx-background-radius: 10; -fx-padding: 10;">
         <children>
            <Text fx:id="restaurantNameText"
                  strokeType="OUTSIDE"
                  strokeWidth="0.0"
                  text="رستوران من"
                  textAlignment="CENTER"
                  style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-fill: white;">
               <VBox.margin>
                  <Insets top="20.0" bottom="20.0"/>
               </VBox.margin>
            </Text>

            <Button fx:id="profileButton" mnemonicParsing="false" text="Profile">
               <font>
                  <Font size="15.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" top="10.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="restaurantPanelButton" mnemonicParsing="false" text="RestaurantPanel">
               <font>
                  <Font size="15.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" top="10.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="orderPanelButton" mnemonicParsing="false" text="OrderPanel">
               <font>
                  <Font size="15.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" top="10.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="LogoutButton" mnemonicParsing="false" text="Logout">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
         </children>
      </VBox>

   </children>
</AnchorPane>
