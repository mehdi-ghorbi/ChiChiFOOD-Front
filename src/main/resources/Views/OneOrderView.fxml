<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.chichifood.controller.OneOrderController"
            prefWidth="800" prefHeight="600"
            style="-fx-background-color: white;">

    <VBox spacing="15" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">

        <!-- دکمه خانه -->
        <Button fx:id="homeButton" text="خانه"
                style="-fx-background-color: #FFA726; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px;"
                maxWidth="100"/>

        <Button fx:id="backButton" text="بازگشت"
                                        style="-fx-background-color: #FFA726; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px;"
                                        maxWidth="100"/>

        <!-- اطلاعات سفارش -->
        <VBox spacing="8" style="-fx-font-size: 14px;">
            <Label fx:id="orderIdLabel"/>
            <Label fx:id="vendorNameLabel"/>
            <Label fx:id="addressLabel"/>
            <Label fx:id="deliveryFeeLabel"/>
            <Label fx:id="totalPriceLabel"/>
            <Label fx:id="taxFeeLabel"/>
            <Label fx:id="serviceFeeLabel"/>
            <Label fx:id="statusLabel"/>
            <Label fx:id="createdAtLabel"/>
            <Label fx:id="updatedAtLabel"/>
        </VBox>

        <!-- لیست آیتم‌ها -->
        <Label text="آیتم‌ها:" style="-fx-font-weight: bold; -fx-text-fill: #FB8C00;"/>
        <VBox fx:id="itemsContainer" spacing="5" style="-fx-font-size: 13px;"/>

    </VBox>
</AnchorPane>
